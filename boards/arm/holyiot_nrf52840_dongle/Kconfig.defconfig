# Standard nRF52840 features

CONFIG_NORDIC_QSPI_NOR=y

# USB HID デバイスとしてPCに認識させるための設定

CONFIG_ZMK_USB_HID_KBD=y
CONFIG_ZMK_USB_HID_CONSUMER=y
CONFIG_ZMK_USB_HID_MOUSE=y
CONFIG_ZMK_KEYBOARD_NAME="roBa Central Dongle"

# --- ZMK SPLIT Central の設定 ---

CONFIG_ZMK_SPLIT=y
CONFIG_ZMK_SPLIT_ROLE_CENTRAL=y               # Central (ホスト) として機能させる
CONFIG_BT_MAX_CONN=2                          # 左右2台のキーボード接続を許可
CONFIG_BT_MAX_PAIRED=2
CONFIG_ZMK_SPLIT_BLE_CENTRAL_CONN_NAME="roBa Central"

# Peripheral のバッテリー情報を取得し、ホストに報告するための設定

CONFIG_ZMK_BATTERY_REPORTING=y
CONFIG_ZMK_SPLIT_BLE_CENTRAL_BATTERY_LEVEL_PROXY=y
CONFIG_ZMK_SPLIT_BLE_CENTRAL_BATTERY_LEVEL_FETCHING=y
CONFIG_ZMK_SPLIT_BLE_CENTRAL_BATTERY_LEVEL_QUEUE_SIZE=4

# Bluetoothの安定性向上 (任意)

CONFIG_BT_CTLR_PHY_2M=y
CONFIG_BT_CTLR_CONN_RSSI_EVENT=y
